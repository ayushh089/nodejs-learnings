<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="main w-full min-h-screen bg-zinc-900">
      <div class="form p-10">
        <form action="/create" method="post">
          <input
            name="title"
            type="text"
            placeholder="Title ðŸ¤”"
            class="block text-white font-bold px-3 py-2 w-full rounded-md bg-zinc-800"
          />
          <textarea
            name="details"
            placeholder="Write your task details..."
            class="block text-white px-3 w-full h-24 py-2 rounded-md mt-2 resize-none bg-zinc-800"
          ></textarea>
          <input
            type="submit"
            class="bg-emerald-400 mt-4 rounded-lg p-2 h-10 font-semibold cursor-pointer hover:bg-emerald-300"
          />
        </form>
      </div>
      <div class="tasks flex flex-row flex-wrap p-10 gap-3">
        <% if(files.length>0){%> <% files.forEach((val)=>{%>
        <div
          class="w-56 h-16 bg-slate-800 rounded-xl px-4 mt-auto overflow-hidden"
        >
          <p
            class="text-white text-2xl mt-1 overflow-hidden  overflow-ellipsis"
          >
            <%= val %>
          </p>
          <a href="/file/<%= val %>" class="text-blue-500 inline-block">Read More</a>
        </div>
        <%})%> <%}else{%>
        <h3 class="text-white">No file Exists !! ðŸ¤¡</h3>
        <%}%>
      </div>
    </div>
  </body>
</html>
